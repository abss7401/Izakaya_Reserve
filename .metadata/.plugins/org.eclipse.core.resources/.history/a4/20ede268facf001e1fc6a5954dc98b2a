package com.example.practice.entity;

import java.time.LocalDate;

import org.springframework.data.annotation.CreatedDate;

import com.example.practice.model.Member;
import com.example.practice.model.Menu;
import com.example.practice.model.Reserve;

import jakarta.persistence.Column;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import lombok.Builder;

public class ReserveEntity {
	
	@Id
	@GeneratedValue(strategy = GenerationType.SEQUENCE)
	@Column(name="reserve_id")
	private Long id;
//	private User user;
	@Column
	private int person;
	@Column
	private Menu menu;
	@Column(name="create_time")
	@CreatedDate
	private LocalDate date;
	@Column
	private Member member;
	
	@Builder
	public ReserveEntity(Long id, int person, Menu menu, 
			LocalDate date, Member member) {
		this.id = id;
		this.person = person;
		this.menu = menu;
		this.date = date;
		this.member = member;
	}
	
	public Reserve toReserve() {
		Reserve build = Reserve.builder()
				.id(id)
				.person(person)
				.menu(menu)
				.date(date)
				.member(member)
				.build();
		return build;
	}
}
